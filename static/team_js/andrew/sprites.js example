window.addEventListener('load', () => {
    const GAME = new PIXI.Application({
        resizeTo: window,
    });
    const GAME_VIEW = GAME.view;

    GAME_VIEW.style.position = 'absolute';

    document.body.appendChild(GAME_VIEW);



    const soldier_texture = PIXI.Texture.from('assets/individual/soldier_sideways.png');

    const soldier1 = new Sprite(soldier_texture, 0, 0);
    soldier1.setSpriteFrameDimensions(29, 41); // dimensions of original image OR cropped image (e.g. sprites from tilesheets)
    // soldier1.addMask(0, 0, 29, 41);
    soldier1.flipHorizontally();
    // soldier1.flipVertically();

    const table = new Sprite(PIXI.Texture.from('assets/individual/table.png'), 0, 0);
    table.moveSprite(100, 0);



    GAME.stage.addChild(
        table.load(),
        soldier1.load()
    );

    GAME.ticker.add(() => {
        if (soldier1.getRightPosX() < table.getLeftPosX()) {
            soldier1.moveSprite(1, 0);
        }
    });
});